{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "vsicons.associations.files": [
    {
      "icon": "jest",
      "extensions": ["jest.base.js"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "nx",
      "extensions": ["project.json"],
      "filename": true,
      "format": "svg"
    },
    {
      "icon": "vscode",
      "extensions": ["extensions.json", "settings.json"],
      "filename": true,
      "format": "svg"
    }
  ],
  "eslint.workingDirectories": ["apps/backend", "libs/health", "libs/logger"],
  "jest.jestCommandLine": "nx run-many --target test",
  "jest.outputConfig": "test-results-based",
  "jest.runMode": "on-demand",
  "testing.openTesting": "neverOpen",
  "sonarlint.connectedMode.project": {
    "connectionId": "sitedia",
    "projectKey": "Sitedia_nestjs-starter"
  },
  "sonarlint.output.showAnalyzerLogs": true,
  "sonarlint.disableTelemetry": true,
  "files.eol": "\n"
}
