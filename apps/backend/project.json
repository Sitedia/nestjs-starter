{
  "name": "apps/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "clear": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf dist coverage openapi.json"],
        "cwd": "apps/backend"
      }
    },
    "clear:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf dist coverage node_modules"],
        "cwd": "apps/backend"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["prettier --write \"src/**/*.ts\""],
        "cwd": "apps/backend"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint . --fix"],
        "cwd": "apps/backend"
      }
    },
    "lint:api": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nest start", "spectral lint ./openapi.json --ruleset ../../spectral.yml"],
        "cwd": "apps/backend",
        "envFile": "apps/backend/.env.swagger",
        "parallel": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nest build"],
        "cwd": "apps/backend"
      },
      "dependsOn": [
        "clear",
        {
          "projects": ["libs/health", "libs/logger"],
          "target": "build"
        }
      ]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nest start --watch"],
        "cwd": "apps/backend",
        "envFile": "apps/backend/.env.dev"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nest start"],
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "start:prod": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node dist/apps/backend/src/main.js"],
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/backend/jest.config.js",
        "runInBand": true
      },
      "dependsOn": ["clear"]
    },
    "test:watch": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/backend/jest.config.js",
        "runInBand": true,
        "watch": true
      },
      "dependsOn": ["clear"]
    },
    "test:coverage": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/backend/jest.config.js",
        "codeCoverage": true,
        "runInBand": true
      },
      "dependsOn": ["clear"]
    },
    "test:report": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["google-chrome index.html"],
        "cwd": "apps/backend/coverage/lcov-report"
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["DOCKER_BUILDKIT=1 docker build . -f apps/backend/Dockerfile -t backend --no-cache"]
      }
    },
    "docker:start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo 'Delete the previous container if exists ..' && docker rm -f backend && echo 'Create the container ...' && docker run --env-file apps/backend/.env.docker --name backend -p 3000:3000 backend"
        ],
        "parallel": false
      }
    }
  }
}
